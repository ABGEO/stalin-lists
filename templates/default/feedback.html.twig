{% extends 'base.html.twig' %}
{% import "_macros.html.twig" as macros %}

{% block title %}უკუკავშირი{% endblock %}

{% block description %}ჩვენთან დასაკავშირებლად ისარგებლეთ ამ გვერდით{% endblock %}

{% block body %}
    <div class="main main-raised">
        <div class="container">
            <div class="section section-contacts">
                <div class="row">
                    <div class="col-md-8 ml-auto mr-auto">
                        {% for type, flushes in app.flashes() -%}
                            {% for message in flushes -%}
                                <div class="alert alert-{{ type }}">
                                    <div class="container">
                                        <div class="alert-icon">
                                            <i class="material-icons">{{ 'success' == type ? 'check' : 'error_outline' }}</i>
                                        </div>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true"><i class="material-icons">clear</i></span>
                                        </button>
                                        {{ message }}
                                    </div>
                                </div>
                            {% endfor -%}
                        {% endfor -%}

                        <h2 class="text-center title">უკუკავშირი</h2>
                        <h4 class="text-center description">ჩვენთან დასაკავშირებლად შეავსეთ ქვემოთ მოცემული ფორმა</h4>

                        {{ form_start(feedbackForm, { 'attr' : {'class' : 'contact-form'} }) }}
                        <div class="row">
                            {{ macros.input(feedbackForm.name, 'col-md-6') }}
                            {{ macros.input(feedbackForm.email, 'col-md-6') }}
                            {{ macros.input(feedbackForm.subject, 'col-md-6') }}
                        </div>
                        {{ macros.input(feedbackForm.message, false) }}
                        <div class="row">
                            <div class="col-md-4 ml-auto mr-auto text-center">
                                {{ form_widget(feedbackForm.send) }}
                            </div>
                        </div>
                        {{ form_end(feedbackForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
